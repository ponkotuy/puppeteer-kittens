{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "module": "ES2015",
    "rootDir": "./src/",
    "moduleResolution": "node",
    "types": ["node", "puppeteer"],
    "sourceMap": true,
    "outDir": "./build/",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
